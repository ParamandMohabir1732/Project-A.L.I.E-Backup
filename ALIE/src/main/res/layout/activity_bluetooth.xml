<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/TheSecondDawnBluetoothLayout"
    android:gravity="center_horizontal"
    tools:context=".BluetoothActivity">

    <TextView
        android:id="@+id/StatusBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/aqua"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/BluetoothImg"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/BlueBtnOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On" />

    <Button
        android:id="@+id/BlueBtnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/BlueBtnDiscoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discoverable"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/BlueBtnPaired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pair device"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/BlueBtnDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Devices paired"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

    <TextView
        android:id="@+id/PairedSpeaker"
        android:minWidth="200dp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>