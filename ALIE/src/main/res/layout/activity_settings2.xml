<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
        android:id="@+id/TheSecondDawnImageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:contentDescription="@string/imageButton3"
        android:src="@drawable/ic_left_arrow_state" />

    <TextView
        android:id="@+id/TheSecondDawnTextView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-25dp"
        android:text="@string/textView20"
        android:textColor="@color/aqua"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/TheSecondDawnTextView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/textView33"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/teal_200"/>

        <TextView
            android:id="@+id/TheSecondDawnTextView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Current Screen Orientation"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/TheSecondDawnSwitch9"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/switch9" />
    </LinearLayout>
</ScrollView>